<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="tx_VideoView">
        <attr name="tx_isself" format="boolean" />
    </declare-styleable>
    <declare-styleable name="tx_ArrowDrawable">
        <!-- 背景色 -->
        <attr format="reference|color" name="tx_ad_bgColor" />
        <!-- 阴影色 -->
        <attr format="reference|color" name="tx_ad_shadowColor" />
        <!-- 箭头高度 -->
        <attr format="dimension" name="tx_ad_arrowHeight" />
        <!-- 阴影宽度 -->
        <attr format="dimension" name="tx_ad_shadowSize" />
        <!-- 浮窗圆角半径 -->
        <attr format="dimension" name="tx_ad_radius" />
        <!-- 箭头在 x 轴的偏移量 -->
        <attr format="dimension" name="tx_ad_arrowExtraOffsetX" />
        <!-- 箭头在 y 轴的偏移量 -->
        <attr format="dimension" name="tx_ad_arrowExtraOffsetY" />
        <!-- 箭头相对于浮窗的位置 -->
        <attr name="tx_ad_arrowGravity">
            <flag name="to_top_align_start" value="65" />
            <flag name="to_top_center" value="129" />
            <flag name="to_top_align_end" value="257" />

            <flag name="align_top_to_start" value="34" />
            <flag name="align_top_to_end" value="514" />

            <flag name="center_to_start" value="36" />
            <flag name="center_to_end" value="516" />

            <flag name="align_bottom_to_start" value="40" />
            <flag name="align_bottom_to_end" value="520" />

            <flag name="to_bottom_align_start" value="80" />
            <flag name="to_bottom_center" value="144" />
            <flag name="to_bottom_align_end" value="272" />
        </attr>
    </declare-styleable>

    <declare-styleable name="tx_CircleImageView">
        <attr name="tx_civ_border_width" format="dimension" />
        <attr name="tx_civ_border_color" format="color" />
        <attr name="tx_civ_border_overlay" format="boolean" />
        <attr name="tx_civ_circle_background_color" format="color" />
    </declare-styleable>

</resources>