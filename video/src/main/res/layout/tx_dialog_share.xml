<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/tx_shape_round_all_15">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tx_dp_30"
        android:gravity="center"
        android:textColor="@color/tx_color_999999"
        android:textSize="@dimen/tx_sp_15"
        android:textStyle="bold"
        android:text = "选择邀请方式"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_uploadpic"
        style="@style/tx_style_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tx_dp_35"
        android:layout_marginBottom="@dimen/tx_dp_40"
        android:gravity="center"
        android:drawableTop="@drawable/tx_icon_share_wx"
        android:text="微信"
        android:textSize="@dimen/tx_sp_14"
        android:textColor="@color/tx_color_333333"
        android:drawablePadding="@dimen/tx_dp_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_share_fd"
        app:layout_constraintTop_toBottomOf="@+id/tv_top"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/tv_share_fd"
        style="@style/tx_style_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:src="@drawable/tx_icon_share_fd"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/tv_uploadpic"
        app:layout_constraintRight_toLeftOf="@+id/tv_uploadfile"
        app:layout_constraintTop_toBottomOf="@+id/tv_top" />

    <ImageView
        android:id="@+id/tv_uploadfile"
        style="@style/tx_style_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tx_icon_share_msg"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/tv_share_fd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_uploadpic" />



    <ImageButton
        android:id="@+id/tv_title"
        style="@style/tx_style_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/tx_dp_5"
        android:layout_marginTop="@dimen/tx_dp_15"
        android:layout_marginEnd="@dimen/tx_dp_15"
        android:src="@drawable/tx_icon_close_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>