<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_videolayouttwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/bigscreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tx_black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tx_shape_08101d"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/trtc_icon_host"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/trtc_pb_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tx_dp_10"
                android:src="@drawable/tx_icon_volume_small_0" />

            <TextView
                android:id="@+id/trtc_tv_content"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/tx_dp_2"
                android:layout_toRightOf="@+id/trtc_pb_audio"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/tx_color_d7d7d7"
                android:textSize="@dimen/tx_sp_12"
                tools:text="XXXX" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/trtc_fl_no_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222222"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_self"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/tx_bg"
                android:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="@dimen/tx_dp_52"
                android:layout_height="@dimen/tx_dp_52"
                android:layout_centerInParent="true">

                <com.txt.video.common.CircleImageView
                    android:id="@+id/iv_video_head"
                    android:layout_width="@dimen/tx_dp_52"
                    android:layout_height="@dimen/tx_dp_52"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/iv_video_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/tx_white"
                    android:textSize="@dimen/tx_sp_15" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_head"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/tx_shape_08101d"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/trtc_icon_host1"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/trtc_pb_audio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/tx_icon_volume_small_0" />

                <TextView
                    android:id="@+id/trtc_tv_content1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tx_dp_2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/tx_color_d7d7d7"
                    android:textSize="@dimen/tx_sp_12"
                    tools:text="XXXX" />


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trtc_video_view_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>


