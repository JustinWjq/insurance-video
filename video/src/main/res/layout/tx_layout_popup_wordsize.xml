<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/tx_shape_round_8_bd000000"
    android:gravity="center"
   >
    <TextView
        android:id="@+id/tv_size_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大字体"
        android:textColor="@color/tx_white"
        android:padding="@dimen/tx_dp_10"
        android:textStyle="bold"
        android:textSize="@dimen/tx_sp_14"
        />

    <TextView
        android:id="@+id/tv_size_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中字体"
        android:textColor="@color/tx_white"
        android:padding="@dimen/tx_dp_10"
        android:textStyle="bold"
        android:textSize="@dimen/tx_sp_14"
        />


    <TextView
        android:id="@+id/tv_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小字体"
        android:textColor="@color/tx_white"
        android:padding="@dimen/tx_dp_10"
        android:textStyle="bold"
        android:textSize="@dimen/tx_sp_14"
        />

</LinearLayout>