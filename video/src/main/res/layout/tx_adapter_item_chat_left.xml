<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/tx_dp_20"
   android:layout_marginStart="@dimen/tx_dp_20"
    android:layout_marginEnd="@dimen/tx_dp_15"
    android:paddingTop="@dimen/tx_dp_10"
    android:paddingBottom="@dimen/tx_dp_10"
   >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/iv_ro_name"
            android:layout_width="@dimen/tx_dp_37"
            android:layout_height="@dimen/tx_dp_37"
            android:textColor="@color/tx_white"
            android:textSize="@dimen/tx_sp_12"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tx_shape_oval_e6b980"
            tools:text = "张文山"
            />

        <TextView
            android:id="@+id/iv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tx_color_333333"
            android:textSize="@dimen/tx_sp_15"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/tx_dp_10"
            tools:text = "张文山"
            />


    </LinearLayout>
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tx_color_333333"
        android:textSize="@dimen/tx_sp_15"
        android:padding="@dimen/tx_dp_12"
        android:layout_marginTop="@dimen/tx_dp_5"
        android:layout_marginEnd="@dimen/tx_dp_20"
        android:background="@drawable/tx_shape_round_left5_color_ffffff"
        tools:text = "张文山张文山张文山张文山张文山张文山张文山张文山张文山张文山张文山"
        />

</LinearLayout>

