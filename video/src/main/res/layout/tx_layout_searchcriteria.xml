<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tx_black"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tx_dp_15"
        android:layout_marginTop="26dp"
        android:text="文件格式"
        android:textColor="@color/tx_white"
        android:textSize="@dimen/tx_sp_14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tx_dp_15"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount = "3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tx_dp_15"
        android:layout_marginTop="18dp"
        android:text="客群"
        android:textColor="@color/tx_white"
        android:textSize="@dimen/tx_sp_14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_kequn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tx_dp_15"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount = "3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tx_dp_21"
        android:layout_marginStart="@dimen/tx_dp_15"
        android:layout_marginEnd="@dimen/tx_dp_15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/tv_ui_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/tx_meeting_button_border_selector_red"
            android:gravity="center"
            android:paddingLeft="@dimen/tx_dp_44"
            android:paddingTop="@dimen/tx_dp_10"
            android:paddingEnd="@dimen/tx_dp_44"
            android:paddingBottom="@dimen/tx_dp_10"
            android:textSize="@dimen/tx_sp_16"
            android:text="重置"
            android:textColor="@color/tx_color_e6b980"
            />

        <TextView
            android:id="@+id/tv_ui_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/tx_button_border_selector_red"
            android:gravity="center"
            android:paddingLeft="@dimen/tx_dp_44"
            android:paddingTop="@dimen/tx_dp_10"
            android:paddingEnd="@dimen/tx_dp_44"
            android:paddingBottom="@dimen/tx_dp_10"
            android:textSize="@dimen/tx_sp_16"
            android:text="确定"
            android:textColor="@color/tx_white"
            android:layout_marginLeft="@dimen/tx_dp_10"
            />


    </LinearLayout>

</LinearLayout>