<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >



    <FrameLayout
        android:id="@+id/trtc_tc_cloud_view"
        android:layout_width="match_parent"
        android:background="@color/tx_black"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/tx_shape_08101d"
        >
        <ImageView
            android:id="@+id/trtc_icon_host"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/trtc_pb_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tx_dp_10"
            android:src="@drawable/tx_icon_volume_small_0"
            />

        <TextView
            android:id="@+id/trtc_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/tx_dp_2"
            android:textColor="@color/tx_color_d7d7d7"
            android:textSize="@dimen/tx_sp_12"
            tools:text="XXXX" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/trtc_fl_no_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222222"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="@dimen/tx_dp_52"
            android:layout_height="@dimen/tx_dp_52"
          >

            <com.txt.video.common.CircleImageView
                android:id="@+id/iv_video_head"
                android:layout_width="@dimen/tx_dp_52"
                android:layout_height="@dimen/tx_dp_52"
                android:layout_gravity="center"
                android:layout_marginTop="2dp" />
            <TextView
                android:id="@+id/iv_video_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tx_white"
                android:textSize="@dimen/tx_sp_15"
                android:gravity="center"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/tx_shape_08101d"
            >
            <ImageView
                android:id="@+id/trtc_icon_host1"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/trtc_pb_audio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tx_dp_10"
                android:src="@drawable/tx_icon_volume_small_0"
                />

            <TextView
                android:id="@+id/trtc_tv_content1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/tx_dp_2"
                android:textColor="@color/tx_color_d7d7d7"
                android:textSize="@dimen/tx_sp_12"
                tools:text="XXXX" />


        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>


