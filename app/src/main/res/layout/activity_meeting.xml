<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/tx_white"
    tools:context="com.txt.myapplication.MeetingActivity">

    <Button
        android:id="@+id/tv_createroom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="创建会议"
        android:textSize="16sp"
        android:textColor="@color/tx_white"
        android:gravity="center"
        android:layout_margin="30dp"
        android:onClick="onMeetClick"
        android:background="@drawable/demo_shape_round_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/tv_joinroom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="加入会议"
        android:textSize="16sp"
        android:textColor="@color/tx_white"
        android:gravity="center"
        android:layout_margin="30dp"
        android:onClick="onMeetClick"
        android:background="@drawable/demo_shape_round_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/tv_reservationroom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="预约会议"
        android:textSize="16sp"
        android:textColor="@color/tx_white"
        android:gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/demo_shape_round_3"
        android:onClick="onMeetClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_joinroom"
        />
    <TextView
        android:id="@+id/tx_roomid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable = "true"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/tv_invited"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="接听"
            android:textSize="16sp"
            android:textColor="@color/tx_white"
            android:gravity="center"
            android:layout_margin="30dp"
            android:background="@drawable/demo_shape_round1"
            android:onClick="onMeetClick"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_joinroom"
            />

        <Button
            android:id="@+id/tv_refuse"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="拒绝"
            android:textSize="16sp"
            android:textColor="@color/tx_white"
            android:gravity="center"
            android:visibility="gone"
            android:layout_margin="30dp"
            android:background="@drawable/demo_shape_round"
            android:onClick="onMeetClick"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_joinroom"
            />


    </LinearLayout>



</LinearLayout>